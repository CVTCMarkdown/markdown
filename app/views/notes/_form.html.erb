<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :tag_list, "Tags* (seperated by commas)" %><br>
    <%= f.text_field :tag_list, value: @note.tag_list.join(", ") %>
  </div>
  
  <div class="markdown">
    <%= f.label :markdown %><br>
    <%= f.text_area :markdown %>
  </div>
  
  <div id="compiled" class="markdown">
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
